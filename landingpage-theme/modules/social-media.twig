				{% if store.social_media.items.snapchat %}
					<a href="https://www.snapchat.com/add/{{ store.social_media.items.snapchat }}" target="_blank">
						<span class="icon-snapchat-ghost d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.tiktok %}
					<a href="https://www.tiktok.com/@{{ store.social_media.items.tiktok }}" target="_blank">
						<span class="icon-tiktok d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.phone %}
					<a href="tel:{{ store.social_media.items.phone }}" target="_blank">
						<span class="icon-call d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.email %}
					<a href="mailto:{{ store.social_media.items.email }}" target="_blank">
						<span class="icon-envelope-secondary d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.website %}
					<a href="{{ store.social_media.items.website }}" target="_blank">
						<span class="icon-globe-secondary d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}
			</div>
		</div>
</section>
{% endif %}


{% schema %}
{
  "name": {
    "ar": "الشبكات الاجتماعية",
    "en": "Social media"
  },
  "icon": "fal fa-sparkles",
  "display": true,
  "settings": {
    "hide": {
      "type": "checkbox",
      "label": {
        "ar": "إخفاء",
        "en": "Hide"
      }
    }
  }
}
{% endschema %}
