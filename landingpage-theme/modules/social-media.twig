
{% if not settings.hide %}
<section section-id="{{ sectionId }}"  class="pt-5 pb-5 socials">
		<div class="d-flex flex-column justify-content-center align-items-center">
			<div class="flex-wrap social-icons d-flex">
        {% if store.social_media.items.facebook %}
