						<span class="icon-facebook-f d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.instagram %}
					<a href="https://www.instagram.com/{{ store.social_media.items.instagram }}" target="_blank">
						<span class="icon-instagram d-flex align-items-center justify-content-center"></span>
					</a>
				{% endif %}

				{% if store.social_media.items.twitter %}
